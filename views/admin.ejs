<%- include('./partials/header', {user: user}); %>
<br>
<div class="container">
    <div class="columns">
        <div class="column">
            
        </div>
        <div class="colum">
            <form action="/set_time" method="POST">
                <div class="field">
                    <label class="label has-text-centered">Set Availability</label>
                  </div>
                <div class="field">
                    <label class="label">Open Hours</label>
                    <div class="control">
                      <input class="input" name="open" type="time" placeholder="Text input">
                    </div>
                    <p class="help">Select your open hours</p>
                  </div>
                <div class="field">
                    <label class="label">Close Hours</label>
                    <div class="control">
                      <input class="input" name="close" type="time" placeholder="Text input">
                    </div>
                    <p class="help">Select your close hours</p>
                  </div>
                  <div class="field">
                    <button class="button is-primary" type="submit" name="submit">Change Time</button>
                  </div>
              </form>
        </div>
        <div class="column">
            
        </div>
    </div>
    
</div>
<%- include('./partials/footer')%>
